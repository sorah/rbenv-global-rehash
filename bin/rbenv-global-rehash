#!/bin/bash

${RBENV_ROOT}/libexec/rbenv rehash || exit 1

for x in ${RBENV_ROOT}/bin/*; do
  name="${x##*/}"
  target="$1/${name}"
  echo "cat > ${target}"
  cat <<EOF > "$target"
#!/bin/sh
set -e
export RBENV_ROOT="${RBENV_ROOT}"
export PATH=${RBENV_ROOT}/bin:${RBENV_ROOT}/shims:\$PATH
exec ${x} \$*
EOF
  chmod +x "$target"
done

for x in ${RBENV_ROOT}/shims/*; do
  target="$1/${x##*/}"
  [ -L ${target} ] && rm ${target}
  echo "cat > ${target}"
  cat <<EOF > "${target}"
#!/bin/sh
set -e
export RBENV_ROOT="${RBENV_ROOT}"
export PATH=${RBENV_ROOT}/bin:${RBENV_ROOT}/shims:\$PATH
exec ${x##*/} "\$@"
EOF
chmod +x "$target"
done
